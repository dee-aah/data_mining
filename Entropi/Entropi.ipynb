import pandas as pd
import math
import os

def hitung_entropi(kolom_target):
    """Menghitung entropi Shannon."""
    nilai_counts = kolom_target.value_counts()
    total_data = len(kolom_target)
    entropi = 0
    
    print(f"\n--- Detail Perhitungan untuk '{kolom_target.name}' ---")
    for nilai, count in nilai_counts.items():
        p = count / total_data
        # Menghindari error log(0) jika ada data kosong
        if p > 0:
            e_part = -p * math.log2(p)
            entropi += e_part
            print(f"Nilai: {nilai} | Jumlah: {count} | Probabilitas: {p:.2f} | -p*log2(p): {e_part:.4f}")
            
    return entropi

# --- BAGIAN INPUT DATA ---
nama_file = 'car_evaluation.csv'

# Cek apakah file ada
if os.path.exists(nama_file):
    # Membaca data dari CSV
    df = pd.read_csv(nama_file)
    
    print("=== DATA BERHASIL DI-LOAD ===")
    print(df)
    print("-" * 40)
    
    # Interaksi User: Memilih kolom target
    print("Kolom tersedia:", list(df.columns))
    target = input("Masukkan nama kolom yang ingin dihitung Entropinya (misal: Keputusan): ")
    
    if target in df.columns:
        hasil_entropi = hitung_entropi(df[target])
        print("=" * 40)
        print(f"TOTAL ENTROPI untuk kolom '{target}': {hasil_entropi:.4f}")
    else:
        print(f"Error: Kolom '{target}' tidak ditemukan dalam data.")

else:
    print(f"Error: File '{nama_file}' tidak ditemukan. Pastikan kamu sudah membuatnya!")